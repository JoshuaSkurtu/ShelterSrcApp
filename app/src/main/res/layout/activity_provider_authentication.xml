<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.androidbootcamp.sheltersrcapp.ProviderAuthenticationActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center"
        android:text="Provider Authentication"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Enter Code Below"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etCodeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="Provider Code"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvCode"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnProviderLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCodeNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#0000ff"
        android:text="Login"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

</RelativeLayout>
